<resources>
    <!-- Base application theme. -->
    <style name="Theme.LaCocinaCompose.NoActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#FFF3EB</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>




    <style name="Theme.LaCocinaCompose.AppBarOverlay.NoActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LaCocinaCompose.PopupOverlay.NoActionBar" parent="ThemeOverlay.AppCompat.Light" >

    </style>
</resources>