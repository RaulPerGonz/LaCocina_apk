<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lacocinacompose">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name=".FirebaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LaCocinaCompose">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.LaCocinaCompose.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.SearchIngredientsActivity"
            android:theme="@style/Theme.LaCocinaCompose.NoActionBar" />
        <activity
            android:name=".screens.SearchRecipesActivity"
            android:theme="@style/Theme.LaCocinaCompose.NoActionBar" />
        <activity
            android:name=".screens.RecipeScreenActivity"
            android:theme="@style/Theme.LaCocinaCompose.NoActionBar" />
        <activity
            android:name=".screens.AddStepsActivity"
            android:theme="@style/Theme.LaCocinaCompose.NoActionBar" />
        <activity
            android:name=".screens.CreateIngredientActivity"
            android:theme="@style/Theme.LaCocinaCompose.NoActionBar" />
    </application>

</manifest>